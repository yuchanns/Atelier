@import './prismjs-yuchanns.styl'

.content
	img
		box-shadow 0 0 10px #555
		border-radius 6px
	h2
		&>a.header-anchor
			font-size 100px
			position relative
			top -60px
			left 60px
			opacity .1
		&:hover
			&>a.header-anchor
				opacity .3
	strong 
		font-weight 600 
		color #fff 
		background linear-gradient(-120deg, #E50743 0%, #F9870F 15%, #E8ED30 30%, #3FA62E 45%, #3BB4D7 60%, #2F4D9E 75%, #71378A 80%) 
		border-width 0.25em 0px 
		border-radius 6px
		padding 2px 4px 
		margin 4px 
		a
			color #fff

.table-of-contents
	&>ul
		list-style none
		&>li
			margin-bottom 10px
			counter-increment a
			&:before
				content counter(a)
				border-radius 5px
				margin-right 14px
				background-color $accentColor
				color #fff
				width 25px
				padding 4px 0
				text-align center
				display inline-block
				font-weight 700

.filter
	&-tags
	&-categories
		display none